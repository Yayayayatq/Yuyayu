import turtle

# Funci√≥n para dibujar un tulip√°n amarillo
def dibujar_tulipan():
    turtle.fillcolor("yellow")
    turtle.begin_fill()
    turtle.circle(30, 180)
    turtle.forward(60)
    turtle.left(120)
    turtle.forward(60)
    turtle.left(120)
    turtle.forward(60)
    turtle.end_fill()

# Configurar la pantalla
turtle.bgcolor("lightblue")
turtle.speed(2)  # Puedes ajustar la velocidad seg√∫n tu preferencia

# Dibujar cinco tulipanes
for _ in range(5):
    dibujar_tulipan()
    turtle.penup()
    turtle.forward(100)
    turtle.pendown()

# Escribir la frase
turtle.penup()
turtle.goto(-150, -200)
turtle.pendown()
turtle.color("purple")
turtle.write("te amo mucho mi ni√±ito de estrellitas en los ojitos üíó", font=("Arial", 14, "normal"))

# Cerrar la ventana haciendo clic en ella
turtle.exitonclick()
